<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gamatechno.government.ulpkudus"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="gamatechno.gov.ulpkudus.lib.AppController"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="gamatechno.gov.ulpkudus.splash.SplashScreen"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Register ULP Dashboard Component -->
        <activity android:name="gamatechno.gov.ulpkudus.HomeActivity" />

        <!-- Register Berita Component -->
        <activity android:name="gamatechno.government.ulpkudus.berita.BeritaActivity" />

        <!-- Register Lelang Component -->
        <activity android:name="gamatechno.government.ulpkudus.lelang.LelangActivity" />

        <!-- Register Kontak Component -->
        <activity android:name="gamatechno.government.ulpkudus.kontak.KontakActivity" />

        <!-- Register Regulasi Component -->
        <activity android:name="gamatechno.government.ulpkudus.regulasi.RegulasiActivity" />

        <!-- Register Publikasi Component -->
        <activity android:name="gamatechno.government.ulpkudus.pelayanan.PelayananActivity" />

        <!-- Register Common Content Component -->
        <activity
            android:name="gamatechno.gov.ulpkudus.ContentActivity"
            android:parentActivityName="gamatechno.gov.ulpkudus.HomeActivity" />
    </application>

</manifest>